model Todo {
    fields {
        label Text
        isDone Boolean @default(false)
        doneAt Timestamp?
        owner Identity
    }

    operations {
        list getAllTodos() {
            @permission(expression: ctx.isAuthenticated)
        }
        create addTodo() with (label) {
            @set(todo.owner = ctx.identity)
        }
        delete removeTodo(id)
    }
}

api Web {
    models {
        Todo
    }
}
